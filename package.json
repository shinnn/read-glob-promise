{
  "name": "read-glob-promise",
  "version": "2.0.0",
  "description": "Promise to read files with glob pattern",
  "repository": "shinnn/read-glob-promise",
  "author": {
    "name": "Shinnosuke Watanabe",
    "url": "https://github.com/shinnn"
  },
  "scripts": {
    "pretest": "jscs *.js && eslint *.js",
    "test": "node test.js | tap-spec",
    "coverage": "istanbul cover test.js",
    "coveralls": "${npm_package_scripts_coverage} && istanbul-coveralls"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/shinnn/read-glob-promise/blob/master/LICENSE"
    }
  ],
  "files": [
    "index.js",
    "LICENSE"
  ],
  "keywords": [
    "fs",
    "multiple",
    "files",
    "read",
    "glob",
    "pattern",
    "promise",
    "promises",
    "then",
    "thenable"
  ],
  "dependencies": {
    "read-glob": "^2.1.0",
    "wrap-promise": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^0.12.0",
    "istanbul": "^0.3.5",
    "istanbul-coveralls": "^1.0.1",
    "jscs": "^1.10.0",
    "tap-spec": "^2.2.0",
    "tape": "^3.4.0",
    "xtend": "^4.0.0"
  },
  "jscsConfig": {
    "preset": "google",
    "maximumLineLength": 98,
    "validateLineBreaks": "LF"
  }
}
